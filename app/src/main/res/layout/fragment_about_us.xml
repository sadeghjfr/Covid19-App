<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_insetEdge="top">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintEnd_toStartOf="@+id/guideline22"
        app:layout_constraintStart_toStartOf="@+id/guideline21"
        app:layout_constraintTop_toTopOf="@+id/guideline10">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/txtTitleResource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resources"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/txtResource2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:autoLink="web"
                android:inputType="textUri"
                android:singleLine="true"
                android:text="@string/news_res"
                android:textColor="@color/colorPrimaryVariant"
                android:textColorLink="@color/colorPrimaryVariant"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/txtResource1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:autoLink="web"
                android:inputType="textUri"
                android:singleLine="true"
                android:text="@string/covid_res"
                android:textColor="@color/colorPrimaryVariant"
                android:textColorLink="@color/colorPrimaryVariant"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/txtTitleDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Developer"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18ssp" />

            <LinearLayout
                android:id="@+id/lytInsta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:onClick="onClick"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_insta" />

                <TextView
                    android:id="@+id/txtInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:longClickable="false"
                    android:singleLine="true"
                    android:text="@string/developer_insta_id"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytTelegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:onClick="onClick"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_telegram" />

                <TextView
                    android:id="@+id/txtTelegram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:longClickable="false"
                    android:singleLine="true"
                    android:text="@string/developer_telegram_id"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>